  <script>
    // data model
    let chemicals = [];
    let currentId = null;

    // utilities
    const uid = (p='id') => p + Math.random().toString(36).slice(2,9);
    const nlSplit = (s) => (s||'').split(/
?
/).map(l=>l.trim()).filter(l=>l.length);

    // safe html escape
    function escapeHtml(s){ if(s === null || s === undefined) return ''; return String(s).replace(/&/g,'&amp;').replace(/</g,'&lt;').replace(/>/g,'&gt;'); }

    // initialize sample + placeholders
    function initData(){
      chemicals = [
        {id:uid('chem'), name:'Ethanol', formula:'C2H6O', identification:'Common alcohol.', references:'', reactions:[{title:'Oxidation to acetaldehyde', equation:'CH3CH2OH + [O] â†’ CH3CHO + H2O', conditions:'PCC, anhydrous', mechanismSteps:[{step:1,description:'Formation of chromate ester'},{step:2,description:'Hydride transfer to Cr (concerted)'}], notes:'PCC stops at aldehyde.'}]},
        {id:uid('chem'), name:'Benzene', formula:'C6H6', identification:'Aromatic hydrocarbon.', references:'', reactions:[]},
        {id:uid('chem'), name:'Water', formula:'H2O', identification:'Universal solvent.', references:'', reactions:[]},
        {id:uid('chem'), name:'Glucose', formula:'C6H12O6', identification:'Aldohexose (D-Glucose).', references:'', reactions:[]},
        {id:uid('chem'), name:'Aspirin', formula:'C9H8O4', identification:'Acetylsalicylic acid.', references:'', reactions:[]}
      ];
      for(let i=chemicals.length;i<100;i++) chemicals.push({id:uid('chem'), name:'Chemical '+(i+1), formula:'', identification:'Placeholder', references:'', reactions:[]});
    }

    // render list
    function renderList(filter=''){
      const container = document.getElementById('list'); container.innerHTML='';
      const q = (filter||'').trim().toLowerCase();
      chemicals.forEach(c=>{
        const text = (c.name + ' ' + (c.formula||'') + ' ' + (c.identification||'')).toLowerCase();
        if(q && !text.includes(q)) return;
        const el = document.createElement('div'); el.className='list-item'; if(c.id===currentId) el.classList.add('active');
        el.dataset.id = c.id;
        el.innerHTML = `<strong>${escapeHtml(c.name)}</strong><div class="small">${escapeHtml(c.formula||'')}</div>`;
        el.addEventListener('click', ()=> openChemical(c.id));
        container.appendChild(el);
      });
    }

    // open chemical
    function openChemical(id){
      currentId = id;
      const c = chemicals.find(x=>x.id===id);
      if(!c) return;
      document.getElementById('empty').style.display='none';
      document.getElementById('editor').style.display='block';
      document.getElementById('chemTitle').textContent = c.name || '';
      document.getElementById('chemFormula').textContent = c.formula || '';
      document.getElementById('ident').value = c.identification || '';
      document.getElementById('refs').value = c.references || '';
      renderReactions(c);
      renderList(document.getElementById('search').value);
    }

    // render reactions (build DOM safely)
    function renderReactions(c){
      const area = document.getElementById('reactionsArea'); area.innerHTML = '';
      const reactions = c.reactions || [];
      if(reactions.length === 0){
        const msg = document.createElement('div'); msg.className = 'reaction'; msg.innerHTML = '<div class="small">No reactions yet for this chemical.</div>';
        area.appendChild(msg); return;
      }

      reactions.forEach((r, idx)=>{
        const box = document.createElement('div'); box.className = 'reaction';

        const titleLabel = document.createElement('label'); titleLabel.textContent = 'Reaction title';
        const titleInput = document.createElement('input'); titleInput.type='text'; titleInput.value = r.title || 'Untitled'; titleInput.dataset.idx = idx; titleInput.className='r-title';

        const eqLabel = document.createElement('label'); eqLabel.textContent = 'Equation';
        const eqInput = document.createElement('input'); eqInput.type='text'; eqInput.value = r.equation || ''; eqInput.dataset.idx = idx; eqInput.className='r-eq';

        const condLabel = document.createElement('label'); condLabel.textContent = 'Conditions';
        const condInput = document.createElement('input'); condInput.type='text'; condInput.value = r.conditions || ''; condInput.dataset.idx = idx; condInput.className='r-conds';

        const notesLabel = document.createElement('label'); notesLabel.textContent = 'Notes';
        const notesArea = document.createElement('textarea'); notesArea.className='r-notes'; notesArea.dataset.idx = idx; notesArea.value = r.notes || '';

        const stepsLabel = document.createElement('label'); stepsLabel.textContent = 'Mechanism steps (one per line)';
        const stepsArea = document.createElement('textarea'); stepsArea.className='r-steps'; stepsArea.dataset.idx = idx; stepsArea.value = (r.mechanismSteps||[]).map(s=> (s.step? s.step + '. ':'') + s.description).join('
');

        const controls = document.createElement('div'); controls.className='controls';
        const delBtn = document.createElement('button'); delBtn.textContent = 'Delete reaction'; delBtn.dataset.idx = idx; delBtn.className='del-reaction';
        controls.appendChild(delBtn);

        box.appendChild(titleLabel); box.appendChild(titleInput);
        box.appendChild(eqLabel); box.appendChild(eqInput);
        box.appendChild(condLabel); box.appendChild(condInput);
        box.appendChild(notesLabel); box.appendChild(notesArea);
        box.appendChild(stepsLabel); box.appendChild(stepsArea);
        box.appendChild(controls);

        area.appendChild(box);

        // wiring
        titleInput.addEventListener('input', ()=>{ r.title = titleInput.value; });
        eqInput.addEventListener('input', ()=>{ r.equation = eqInput.value; });
        condInput.addEventListener('input', ()=>{ r.conditions = condInput.value; });
        notesArea.addEventListener('input', ()=>{ r.notes = notesArea.value; });
        stepsArea.addEventListener('input', ()=>{
          const lines = nlSplit(stepsArea.value);
          r.mechanismSteps = lines.map((ln,i)=>{
            const dot = ln.indexOf('.');
            if(dot>0){ return {step: Number(ln.slice(0,dot))||i+1, description: ln.slice(dot+1).trim() }; }
            return {step: i+1, description: ln};
          });
        });

        delBtn.addEventListener('click', ()=>{
          if(!confirm('Delete this reaction?')) return;
          c.reactions.splice(idx,1);
          renderReactions(c);
        });
      });
    }

    // add new chemical
    function newChemical(){
      const name = prompt('Chemical name') || ('Chemical ' + (chemicals.length+1));
      const chem = {id:uid('chem'), name, formula:'', identification:'', references:'', reactions:[]};
      chemicals.unshift(chem);
      renderList(document.getElementById('search').value);
      openChemical(chem.id);
    }

    // add reaction to current
    function addReaction(){
      if(!currentId) return alert('Open a chemical first');
      const c = chemicals.find(x=>x.id===currentId);
      c.reactions = c.reactions || [];
      c.reactions.push({title:'New reaction', equation:'', conditions:'', notes:'', mechanismSteps:[]});
      renderReactions(c);
    }

    // save chemical
    function saveChemical(){
      if(!currentId) return;
      const c = chemicals.find(x=>x.id===currentId);
      c.identification = document.getElementById('ident').value;
      c.references = document.getElementById('refs').value;
      renderList(document.getElementById('search').value);
      alert('Saved ' + c.name);
    }

    // delete chemical
    function deleteChemical(){
      if(!currentId) return;
      const c = chemicals.find(x=>x.id===currentId);
      if(!confirm('Delete ' + c.name + '?')) return;
      chemicals = chemicals.filter(x=>x.id!==currentId);
      currentId = null; document.getElementById('editor').style.display='none'; document.getElementById('empty').style.display='block'; renderList();
    }

    // import/export
    document.getElementById('importBtn').addEventListener('click', ()=> document.getElementById('fileInput').click());
    document.getElementById('fileInput').addEventListener('change', (e)=>{
      const f = e.target.files[0]; if(!f) return; const reader = new FileReader(); reader.onload = ev => {
        try{
          const data = JSON.parse(ev.target.result);
          if(!Array.isArray(data)) return alert('JSON must be an array of chemical objects');
          chemicals = data.map(c=> ({ id:c.id||uid('chem'), name:c.name||'Unnamed', formula:c.formula||'', identification:c.identification||'', references:c.references||'', reactions:c.reactions||[] }));
          renderList(); alert('Imported '+chemicals.length+' chemicals');
        }catch(err){ alert('Invalid JSON: ' + (err && err.message ? err.message : err)); }
      }; reader.readAsText(f);
    });

    document.getElementById('exportBtn').addEventListener('click', ()=>{
      const blob = new Blob([JSON.stringify(chemicals,null,2)],{type:'application/json'});
      const a = document.createElement('a'); a.href = URL.createObjectURL(blob); a.download = 'chemicals.json'; document.body.appendChild(a); a.click(); a.remove();
    });

    // search
    document.getElementById('search').addEventListener('input', (e)=> renderList(e.target.value));

    // buttons
    document.getElementById('newChem').addEventListener('click', newChemical);
    document.getElementById('addReaction').addEventListener('click', addReaction);
    document.getElementById('saveChem').addEventListener('click', saveChemical);
    document.getElementById('deleteChem').addEventListener('click', deleteChemical);

    // init
    initData(); renderList();
  </script>
  <!-- AI Assistant Widget -->
  <div id="aiBox" style="position:fixed;bottom:20px;right:20px;width:340px;background:#fff;border-radius:12px;box-shadow:0 8px 24px rgba(0,0,0,0.15);padding:12px;font-family:Inter,system-ui;z-index:9999">
    <h3 style="margin:0 0 6px 0;font-size:16px">Chemistry AI Assistant</h3>
    <div id="aiOutput" style="height:180px;overflow-y:auto;background:#f5f7fc;border-radius:8px;padding:8px;font-size:14px;border:1px solid #e2e8ff"></div>
    <textarea id="aiInput" placeholder="Ask any chemistry question..." style="width:100%;margin-top:8px;border-radius:8px;border:1px solid #ccd7ff;padding:8px;font-size:14px;height:60px"></textarea>
    <button id="askAI" style="margin-top:8px;width:100%;border-radius:8px;padding:8px;background:#0b63ff;color:white;border:none;cursor:pointer">Ask AI</button>
  </div>

  <script>
    // === AI Integration (placeholder) ===
    // USER MUST INSERT THEIR OPENAI API KEY
    const OPENAI_API_KEY = "YOUR_API_KEY_HERE"; // <--- Replace this

    async function askAI(query){
      const output = document.getElementById('aiOutput');
      output.innerHTML += `<div><strong>You:</strong> ${query}</div>`;

      try{
        const response = await fetch("https://api.openai.com/v1/chat/completions",{
          method:"POST",
          headers:{
            "Content-Type":"application/json",
            "Authorization":"Bearer " + OPENAI_API_KEY
          },
          body:JSON.stringify({
            model:"gpt-4o-mini", // lightweight chemistry-capable model
            messages:[
              {role:"system", content:"You are a chemistry expert AI that explains concepts simply."},
              {role:"user", content:query}
            ]
          })
        });

        const data = await response.json();
        const answer = data.choices?.[0]?.message?.content || "(No response)";

        output.innerHTML += `<div style='margin-top:6px'><strong>AI:</strong> ${answer}</div>`;
        output.scrollTop = output.scrollHeight;

      }catch(err){
        output.innerHTML += `<div style='color:red'><strong>Error:</strong> ${err}</div>`;
      }
    }

    document.getElementById('askAI').addEventListener('click',()=>{
      const inp = document.getElementById('aiInput');
      const query = inp.value.trim();
      if(!query) return;
      askAI(query);
      inp.value = "";
    });
  </script>

</body>
