<!-- Script -->
<script type="module">

// Import reaction dataset
import reactions from './reactions-data.js';

const list = document.getElementById('reactionList');
const search = document.getElementById('reactionSearch');
const filter = document.getElementById('reactionFilter');

// Function to display reactions
function loadReactions(data) {
  list.innerHTML = '';
  data.forEach(r => {
    const card = document.createElement('div');
    card.className = 'reaction-card';
    card.innerHTML = `
      <h2>${r.name}</h2>
      <p><b>Type:</b> ${r.type}</p>
      <p><b>Definition:</b> ${r.definition}</p>
      <p><b>Scheme:</b> ${r.scheme}</p>
      <p><b>Mechanism:</b> ${r.mechanism}</p>
      <p><b>Applications:</b> ${r.applications}</p>
    `;
    list.appendChild(card);
  });
}

// Initial load
loadReactions(reactions);

// Search functionality
search.addEventListener('keyup', () => {
  const word = search.value.toLowerCase();
  const filtered = reactions.filter(r =>
    r.name.toLowerCase().includes(word) || r.type.toLowerCase().includes(word)
  );
  loadReactions(filtered);
});

// Filter functionality
filter.addEventListener('change', () => {
  const value = filter.value;
  if (value === 'All') loadReactions(reactions);
  else loadReactions(reactions.filter(r => r.type === value));
});

// Dark mode toggle
function toggleDark() { document.body.classList.toggle('dark-mode'); }
window.toggleDark = toggleDark;

</script>

</body>
</html>







