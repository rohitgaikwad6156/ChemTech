                                        key={reaction.id}
                                        onClick={() => setSelectedReaction(reaction)}
                                        className="reaction-card p-6 cursor-pointer flex flex-col h-full animate-card group"
                                        style={{ animationDelay: `${index * 0.03}s` }}
                                    >
                                        <div className="flex justify-between items-start mb-4">
                                            <span className={`text-[10px] font-bold px-2.5 py-1 rounded-full uppercase tracking-wider transition-colors
                                                ${reaction.category === 'Organic' ? 'bg-emerald-50 text-emerald-600 group-hover:bg-emerald-100' :
                                                  reaction.category === 'Inorganic' ? 'bg-blue-50 text-blue-600 group-hover:bg-blue-100' :
                                                  reaction.category === 'Biochemical' ? 'bg-purple-50 text-purple-600 group-hover:bg-purple-100' :
                                                  reaction.category === 'Polymerization' ? 'bg-pink-50 text-pink-600 group-hover:bg-pink-100' :
                                                  'bg-orange-50 text-orange-600 group-hover:bg-orange-100'
                                                }`}>
                                                {reaction.category}
                                            </span>
                                            <Icon name="info" className="w-5 h-5 text-gray-300 group-hover:text-accent transition-colors duration-300" />
                                        </div>
                                        
                                        <h3 className="text-lg font-bold text-primary mb-3 line-clamp-2 group-hover:text-secondary transition-colors duration-300">{reaction.name}</h3>
                                        
                                        <div className="bg-slate-50 p-3 rounded-lg mb-5 border border-slate-100 flex-grow group-hover:border-slate-200 transition-colors">
                                            <p className="font-mono text-xs text-slate-600 break-words leading-relaxed">{reaction.equation}</p>
                                        </div>
                                        
                                        <div className="pt-4 border-t border-gray-50 flex justify-between items-center mt-auto">
                                            <span className="text-xs font-semibold text-gray-400">View Details</span>
                                            <div className="w-6 h-6 rounded-full bg-gray-50 flex items-center justify-center group-hover:bg-accent group-hover:text-white transition-all duration-300">
                                                <svg className="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path strokeLinecap="round" strokeLinejoin="round" strokeWidth="2" d="M9 5l7 7-7 7"></path></svg>
                                            </div>
                                        </div>
                                    </div>
                                ))}
                            </div>
                        ) : (
                            <div className="text-center py-24 bg-white rounded-2xl border border-dashed border-gray-300 shadow-sm">
                                <div className="bg-gray-50 w-20 h-20 rounded-full flex items-center justify-center mx-auto mb-6">
                                    <Icon name="search" className="w-10 h-10 text-gray-300" />
                                </div>
                                <h3 className="text-xl font-bold text-primary mb-2">No reactions found</h3>
                                <p className="text-gray-500 max-w-sm mx-auto">We couldn't find any reactions matching "{searchTerm}". Try adjusting your search keywords.</p>
                                <button onClick={() => {setSearchTerm(""); setSelectedCategory("All");}} className="mt-6 px-6 py-2 bg-secondary text-white rounded-lg hover:bg-opacity-90 transition-colors shadow-lg shadow-secondary/30">
                                    Reset Filters
                                </button>
                            </div>
                        )}
                    </main>
                    
                    {/* Footer */}
                    <footer className="bg-white border-t border-gray-200 mt-auto py-8">
                        <div className="max-w-7xl mx-auto px-4 text-center text-gray-400 text-sm">
                            <p>© 2024 Chemtech Database. Designed for science professionals.</p>
                        </div>
                    </footer>

                    {/* Modal */}
                    {selectedReaction && (
                        <Modal reaction={selectedReaction} onClose={() => setSelectedReaction(null)} />
                    )}
                </div>
            );
        };

        const root = ReactDOM.createRoot(document.getElementById('root'));
        root.render(<App />);
    </script>
</body>
</html>
